{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": [
            "es2020",
            "dom"
        ],
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "types": [
            "node"
        ]
    },
    "include": [
        "api/**/*",
        "public/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}